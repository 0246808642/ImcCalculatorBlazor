@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager

<dialog id="resultado-dialog">
    <div class="dialog-content">
        @ChildContent
        <br />
        <button @onclick="HideModalAsync" class="btn btn-filled btn-auto mb">
        Register Imc
        </button>
    </div>
</dialog>


@code{
    [EditorRequired]
    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;

    [Parameter]
    public EventCallback<MouseEventArgs> OnClose { get; set; }

    public async Task ShowModalAsync(){
        await JSRuntime.InvokeVoidAsync("showModal", "resultado-dialog");
        StateHasChanged();
    }
    private async Task HideModalAsync(){
        await JSRuntime.InvokeVoidAsync("hideModal", "resultado-dialog");
        StateHasChanged();
        NavigationManager.NavigateTo("#history");
        await OnClose.InvokeAsync();
    }
}